{
  "name": "Browser Pets",
  "description": "Pets for your browser",
  "version": "1.0.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["build/content.css"],
      "js": ["build/content.js"]
    }
  ],
  "options_page": "options.html"
}
